extends layout

block content
	main
		article
			h1#product-name #{name}
			.row
				.col
					img#product-image(alt='product', src=image)
				.col
					section
						h2 Description
						p#product-desc #{description}
					section
						h2 Caractéristiques
						ul#product-features 
							each val in features
								li= val
					hr
					form#add-to-cart-form.pull-right
						label(for='product-quantity') Quantité:
						input#product-quantity.form-control(type='number', value='1', min='1')
						button.btn(title='Ajouter au panier', type='submit')
							i.fa.fa-cart-plus
							|   Ajouter
					p
						| Prix: #{price}
						strong#product-price
			#dialog.dialog Le produit a été ajouté au panier.
		
